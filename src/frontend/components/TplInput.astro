---
import DropdownSelect from './DropdownSelect.astro';

interface Props {
    name?: string;
    options?: Record<string, string>;
    disabled?: boolean;
}

const { name, options = {}, disabled = false } = Astro.props;

// Map templates to options format
const dropdownOptions = Object.keys(options).map(key => ({
    value: key,
    label: key
}));
---

<DropdownSelect 
    name={name || ''} 
    options={dropdownOptions} 
    placeholder="Select a template" 
    {disabled}
/>
