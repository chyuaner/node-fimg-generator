---
import Layout from '../layouts/Layout.astro';

---
<style>
    .eurl {
        display: grid;
        overflow: scroll;
    }
    .eurl-content { margin-left: 3em; }
    .eurl .eurl-base, .eurl .eurl-content {
        display: inline-flex;
        flex-wrap: wrap;
    }
    @media (width >= 48rem) {
        .eurl { display: flex; }
        .eurl-content { margin-left: 0; }
        .eurl .eurl-base, .eurl .eurl-content {
            padding-top: 0.5em;
            padding-bottom: 0.5em;
        }
    }
    .eurl .eurl-group {
        align-items: start;
        width: fit-content;
        margin: 0 0.5em;
        /* background-color: darkred; */
        border-radius: 12px;
    }

    .eurl .eurl-part {
        /* padding: 0 0.5em; */
        /* background-color: rgb(28, 114, 85); */
        display: inline-table;
        justify-items: center;
        text-align: center;

        /* display: table; */
    }
    .eurl .eurl-part::before {
        content: '';
        font-size: 0.6em;
        display: table-footer-group;
        color: oklch(75% 0.006 286.286);

        /* display: table-header-group; */
        /* line-height: 1em; */
    }
    @media (width >= 48rem) {
        .eurl .eurl-part {
            margin: 0 0.5em;
        }
        .eurl .eurl-group {
            padding-top: 0.5em;
            padding-bottom: 0.5em;
        }
        .eurl .eurl-part::before {
            content: ' ';
        }
        .eurl .eurl-part[data-url-ptitle]::before {
            content: '[' attr(data-url-ptitle) ']';
        }
    }
</style>


<Layout>
<section id="intro" class="">

</section>

<article class="grid">

    <div class="eurl bg-neutral p-2 rounded-xl text-neutral-content w-full whitespace-nowrap">

      <span class="eurl-base"><span class="eurl-group">https://fimg.yuaner.tw</span></span>
      <span class="eurl-content">
          <span class="eurl-group hover:bg-indigo-600/30 inline">/<span class="eurl-part" data-url-ptitle="Canvas Size">300x200</span></span>
          <span class="eurl-group hover:bg-cyan-600/30">/bg/<span class="eurl-part" data-url-ptitle="Padding">2x3</span>/<span class="eurl-part" data-url-ptitle="Shadow">5</span>/<span class="eurl-part" data-url-ptitle="Radius">3</span>/<span class="eurl-part" data-url-ptitle="Color">A5D0E5</span></span>
          <span class="eurl-group hover:bg-yellow-600/30">/ph/<span class="eurl-part" data-url-ptitle="bgcolor">ff0000,128</span>/<span class="eurl-part" data-url-ptitle="fgcolor">000,255</span>/?<span class="eurl-part">text=Hello+World</span></span>
          <span class="eurl-group hover:bg-green-600/30">&<span class="eurl-part">filetype=svg</span></span>
      </span>
    </div>
    <p>ppppp</p>

</article>
</Layout>
